<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiBug1.MainPage">
    
    <StackLayout>
        <StackLayout>
            <StackLayout Spacing="5">
                <Button Text="I'm Visible By Default"
                        x:Name="VisibleButton"
                        IsVisible="True" />
                
                <Button Text="I'm NOT Visible By Default"
                        x:Name="InvisibleButton"
                        IsVisible="False" />
                
                <Button Text="Make Me Visible" Clicked="ToggleButtonVisible" />            
            </StackLayout>
        
        </StackLayout>        
    </StackLayout>
    
</ContentPage>